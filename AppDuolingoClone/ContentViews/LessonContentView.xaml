<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AppDuolingoClone.Controls"
    xmlns:converters="clr-namespace:AppDuolingoClone.Converters"
    x:Class="AppDuolingoClone.ContentViews.LessonContentView"
    Margin="10,0"
>
    <ContentView.Content>
        <StackLayout
            Spacing="15"
        >
            <Grid
                WidthRequest="110"
                HeightRequest="110"
                HorizontalOptions="Center"
                VerticalOptions="Center"
            >
                <controls:CircularProgressBar
                    WidthRequest="110"
                    HeightRequest="110"
                    TrackColor="#e6e6e6"
                    ProgressColor="#f7ca45"
                    Progress="0.2"
                />

                <BoxView
                    BackgroundColor="{Binding Color}"
                    WidthRequest="90"
                    HeightRequest="90"
                    CornerRadius="45"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                />

                <Image
                    Source="{Binding Icon}"
                    WidthRequest="60"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                />

                <Grid
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    WidthRequest="50"
                >
                    <Image
                        Source="{Binding Level, Converter={converters:LevelToImageCrownConverter}}"
                    />

                    <Label
                        Text="{Binding Level}"
                        TextColor="#ce8830"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                    />
                </Grid>
            </Grid>

            <Label
                Text="{Binding Name}"
                FontSize="20"
                HorizontalTextAlignment="Center"
            />
        </StackLayout>
    </ContentView.Content>
</ContentView>
